@model HMSBO.ViewModels.VmInvestigation

@{
    ViewBag.Title = ViewBag.OPTitle;
}

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-4"><a class="btn btn-success" href="/Diagnostic/GetInvestigationList">Back To List</a></div>
            <div class="col-md-4"><h4>@ViewBag.OPTitle</h4></div>
            <div class="col-md-4"><button class="btn btn-primary float-right" form="frmInv"><i class="fa fa-save"></i>&nbsp;Save</button></div>
        </div>
        <br />
    </div>
    <div class="col-md-12" style="overflow-y:scroll;height:600px">
        @using (Html.BeginForm("SaveInvestigation", "Diagnostic", FormMethod.Post, new { @id = "frmInv" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group col-md-4">
                    @Html.LabelFor(m => m.Name, string.Format(@"Investigatin Name:"), new { @class = "control-label col-md-10 font-weight-bold" })
                    <div class="col-md-10 input-group">
                        @Html.EditorFor(m => m.Name, new { @class = "form-control form-control-sm" })
                        <span class="text-danger">*</span>
                    </div>
                    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "error" })
                </div>
                <div class="form-group col-md-4">
                    <div class="form-group col-md-4">
                        @Html.LabelFor(m => m.Fee, string.Format(@"Investigatin Name:"), new { @class = "control-label col-md-10 font-weight-bold" })
                        <div class="col-md-10 input-group">
                            @Html.EditorFor(m => m.Fee, new { @class = "form-control form-control-sm",@type="number" })
                            <span class="text-danger">*</span>
                        </div>
                        @Html.ValidationMessageFor(m => m.Fee, null, new { @class = "error" })
                    </div>
                </div>
                <div class="form-group col-md-4"></div>
            </div>
            <div class="form-row"></div>
            <div class="form-row"></div>
        }
    </div>
</div>

