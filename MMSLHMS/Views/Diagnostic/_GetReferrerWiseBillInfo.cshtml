@using PagedList.Mvc;
@using PagedList;
@model IPagedList<HMSBO.ViewModels.vmReferrerWiseBillInfo>

<table id="tblReferrerWiseBillInfo" class="table table-sm table-bordered table-responsive-lg table-hover">
    <thead class="btn-info">
        <tr>
            <th class="hide">Referrer Id</th>
            <th>Referrer Name</th>
            <th>Mobile No</th>
            <th>Total Investigations</th>
            <th>Total Amount</th>
            <th>Total Ref. Fee</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="hide">@item.RefId</td>
                    <td>@item.RefName</td>
                    <td>@item.RefPhone</td>
                    <td align="center">@item.TotalRefData</td>
                    <td align="right">@item.TotalAmount</td>
                    <td align="right">@item.TotalRefFeeAmount</td>
                    <td class="text-center"><a href="#" data-view-item="@item.RefId" class="btn btn-success btn-sm data-Referrer-item"><i class="fa fa-eye"></i> <span style="font-size:small">View Details</span></a></td>
                </tr>
            }
        }
        else
        {
            <tr class="empty-row">
                <td colspan="5" class="text-center text-danger">No Data Found</td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager(Model, page => Url.Action("", new { page }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })