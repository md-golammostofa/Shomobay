@model HMSBO.ViewModels.VmEmployee

@{
    /**/

    ViewBag.Title = "Create New Employee";
}
<div class="row">
    <div class="col-md-12">

    </div>
    <div class="col-md-12">
        @using (Html.BeginForm("SaveEmployee", "Organization", FormMethod.Post, new { @id = "empForm", role = "form" }))
        {
            @Html.HiddenFor(model => model.EmployeeId)
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group col-md-2">
                    <a class="btn btn-primary btn-sm" id="btnList" href="/Organization/GetEmployeeList">Back To List</a>
                </div>
                <div class="form-group col-md-8 text-center">
                    <div class="col-md-10">
                        <h4>@ViewBag.heading</h4>
                    </div>
                </div>
                <div class="form-group col-md-2">
                    <div class="col-md-10">
                        <button type="submit" class="btn btn-success btn-sm float-right"><i class="fa fa-save"></i> Save</button>
                    </div>
                </div>

            </div>
            <hr />
            <div class="form-row" style="font-size:small">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.FirstName, "First Name", htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-4" style="font-size:small">
                    @Html.LabelFor(model => model.MiddleName, "Middle Name", htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MiddleName, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                        @Html.ValidationMessageFor(model => model.MiddleName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-4" style="font-size:small">
                    @Html.LabelFor(model => model.LastName, "Last Name", htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-row" style="font-size:small">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.BranchId, "Branch Name", htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.BranchId, (IEnumerable<SelectListItem>)ViewBag.BrancheList, "Select Branch", new { @class = "form-control form-control-sm" })

                        @Html.ValidationMessageFor(model => model.BranchId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.DepartmentId, "Department Name", htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.DepartmentId, (IEnumerable<SelectListItem>)ViewBag.DepartmentList, "Select Department", new { @class = "form-control form-control-sm" })
                        @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.DesignationId, "Designation", htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.DesignationId, (IEnumerable<SelectListItem>)ViewBag.DesignationList, "Select Designation", new { @class = "form-control form-control-sm" })
                        @Html.ValidationMessageFor(model => model.DesignationId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-row" style="font-size:small">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.MaritalStatus, "Marital Status", htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.MaritalStatus,new List<SelectListItem>()
                   {
                       new SelectListItem {Text="Married",Value="Married"},
                       new SelectListItem {Text="Unmarried",Value="Unmarried"}
                   }, "Select One", new { @class = "form-control form-control-sm" })

                        @Html.ValidationMessageFor(model => model.MaritalStatus, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Gender, "Gender", htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Gender,new List<SelectListItem>()
                   {
                       new SelectListItem {Text="Male",Value="Male"},
                       new SelectListItem {Text="Female",Value="Female"}
                   }, "Select Gender", new { @class = "form-control form-control-sm" })

                        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Nationality, "Nationality", htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Nationality, new List<SelectListItem>()
                   {
                       new SelectListItem {Text="Bangladeshi",Value="Bangladeshi"}
                   }, "Select One", new { @class = "form-control form-control-sm" })

                        @Html.ValidationMessageFor(model => model.Nationality, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-row" style="font-size:small">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.PresentAddress, "Present Address", htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.PresentAddress, new { @class = "form-control form-control-sm", @cols = "10", @rows = "3" })

                        @Html.ValidationMessageFor(model => model.PresentAddress, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.ParmanentAddress, "Parmanent Address", htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.ParmanentAddress, new { @class = "form-control form-control-sm", @cols = "10", @rows = "3" })

                        @Html.ValidationMessageFor(model => model.ParmanentAddress, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-row" style="font-size:small">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Email, "Email Address", htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-control-sm", @type = "email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.MobileNo, "Mobile No.", htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control form-control-sm", @type = "number" } })
                        @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.HomeContactNo, "Phone Number(Home)", htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.HomeContactNo, new { htmlAttributes = new { @class = "form-control form-control-sm", @type = "number" } })
                        @Html.ValidationMessageFor(model => model.HomeContactNo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-row" style="font-size:small">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.DOB, "Date of Birth", htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control form-control-sm", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.IsActive, "Is Active", htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold", @style = "visibility:hidden" })
                    <div class="col-md-10">
                        <div class="form-control form-control-sm">
                            @Html.CheckBoxFor(model => model.IsActive) Is Active ?
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.AllowToLogin, "Allow To Login?", htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold", @style = "visibility:hidden" })
                    <div class="col-md-10">
                        <div class="form-control form-control-sm">
                            @Html.CheckBoxFor(model => model.AllowToLogin) Allow To Login ?
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {

        })
    </script>
}
