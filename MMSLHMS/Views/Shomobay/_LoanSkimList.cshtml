@model IEnumerable<HMSBO.ViewModels.VmLoanSkim>
@{
    Layout = null;
    int sl = 0;
}
<div class="col-md-12 text-sm" style="overflow-y:scroll">
    <table class="table table-bordered table-sm table-striped" id="tblMembers">
        <thead class="btn-info" style="background-color:#552eb3">
            <tr class="text-center">
                <th style="vertical-align:middle">#SL</th>
                <th class="hide"></th>
                <th style="vertical-align:middle">Scheme</th>
                <th style="vertical-align:middle">Interest(%)</th>
                <th style="vertical-align:middle">Time Limit(Days)</th>
                <th style="vertical-align:middle">Remarks</th>
                <th style="vertical-align:middle">Entry Date</th>
                <th style="vertical-align:middle">Entry User</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                sl = sl + 1;
                string entryDate = item.EntryDate != null ? item.EntryDate.Value.ToString("dd-MMM-yyy") : "";
                <tr>
                    <td class="text-center">@sl</td>
                    <td class="hide">@item.SkimId</td>
                    <td>@item.SkimName</td>
                    <td class="text-center">@item.Interest</td>
                    <td class="text-center">@item.TimeLimit</td>
                    <td>@item.Remarks</td>
                    <td>@entryDate</td>
                    <td>@item.EntryUser</td>
                </tr>
            }
            @if (Model.Count() == 0)
            {
                <tr class="text-center empty-row">
                    <td colspan="7">
                        No Rows Found
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

