@model IEnumerable<HMSBO.ViewModels.VmSavings>
@{
    Layout = null;
    int sl = 0;
}
<div class="col-md-12 text-sm" style="overflow-y:scroll">
    <table class="table table-bordered table-sm table-striped" id="tblSavingsList">
        <thead class="btn-info" style="background-color:#552eb3">
            <tr class="text-center">
                <th style="vertical-align:middle">#SL</th>
                <th class="hide"></th>
                <th style="vertical-align:middle">Saving Date</th>
                <th style="vertical-align:middle">Member Code</th>
                <th style="vertical-align:middle">Member Name</th>
                <th style="vertical-align:middle">Address</th>
                <th style="vertical-align:middle">Mobile No</th>
                <th style="vertical-align:middle">Saving Amount</th>
                <th style="vertical-align:middle">Remarks</th>
                <th style="vertical-align:middle">Entry User</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                sl = sl + 1;
                string savingDate = item.SavingDate != null ? item.SavingDate.Value.ToString("dd-MMM-yyy") : "";
                <tr>
                    <td class="text-center">@sl</td>
                    <td class="hide">@item.SavingId</td>
                    <td>@savingDate</td>
                    <td>@item.MemberCode</td>
                    <td>@item.MemberName</td>
                    <td>@item.MemberAddress</td>
                    <td>@item.MemberMobile</td>
                    <td class="text-right">@item.SavingAmount.ToString("0.00")</td>
                    <td>@item.Remarks</td>
                    <td>@item.EntryUser</td>
                </tr>
            }
            @if (Model.Count() == 0)
            {
                <tr class="text-center empty-row">
                    <td colspan="9">
                        No Rows Found
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


