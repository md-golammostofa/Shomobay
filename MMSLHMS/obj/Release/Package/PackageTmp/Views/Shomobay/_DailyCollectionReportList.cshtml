@model IEnumerable<HMSBO.ViewModels.VmMoneyCollection>
@{
    Layout = null;
    int sl = 0;
}
<div class="col-md-12 text-sm" style="overflow-y:scroll">
    <table class="table table-bordered table-sm table-striped" id="tblMoneyCollectionList">
        <thead class="btn-info" style="background-color:#552eb3">
            <tr class="text-center">
                <th style="vertical-align:middle">#SL</th>
                <th class="hide"></th>
                <th style="vertical-align:middle">C Date</th>
                <th style="vertical-align:middle">Loan Code</th>
                <th style="vertical-align:middle">Member Code</th>
                <th style="vertical-align:middle">Member Name</th>
                <th style="vertical-align:middle">Address</th>
                <th style="vertical-align:middle">Mobile No</th>
                <th style="vertical-align:middle">Amount</th>
                <th style="vertical-align:middle">Profit Amount</th>
                <th style="vertical-align:middle">Principal Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                sl = sl + 1;
                string mcDate = item.MCDate != null ? item.MCDate.Value.ToString("dd-MMM-yyy") : "";
                string entryDate = item.EntryDate != null ? item.EntryDate.Value.ToString("dd-MMM-yyy") : "";
            <tr>
                <td class="text-center">@sl</td>
                <td class="hide">@item.MCId</td>
                <td>@mcDate</td>
                <td>@item.LDisCode</td>
                <td>@item.MemberCode</td>
                <td>@item.MemberName</td>
                <td>@item.MemberAddress</td>
                <td>@item.MemberMobile</td>
                <td class="text-right">@item.MCAmount.ToString("0.00")</td>
                <td class="text-right">@item.ProfitAmount.ToString("0.00")</td>
                <td class="text-right">@item.PrincipalAmount.ToString("0.00")</td>
            </tr>
            }
            @if (Model.Count() == 0)
            {
                <tr class="text-center empty-row">
                    <td colspan="10">
                        No Rows Found
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
