@model IEnumerable<HMSBO.ViewModels.VmLoanDistribution>
@{
    Layout = null;
    int sl = 0;
    string badge = string.Empty;
}
<div class="col-md-12 text-sm" style="overflow-y:scroll">
    <table class="table table-bordered table-sm table-striped tblMoneyCollection" id="tblMoneyCollection">
        <thead class="btn-info" style="background-color:#552eb3">
            <tr class="text-center">
                <th style="vertical-align:middle">#SL</th>
                <th class="hide"></th>
                <th style="vertical-align:middle">Loan Status</th>
                <th style="vertical-align:middle">Loan Code</th>
                <th style="vertical-align:middle">Loan Amount</th>
                <th style="vertical-align:middle">Daily Payable</th>
                <th style="vertical-align:middle">Collection Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                sl = sl + 1;
                string disDate = item.EntryDate != null ? item.EntryDate.Value.ToString("dd-MMM-yyy") : "";
                badge = item.LoanStatus == "Running" ? "badge bg-success" : "badge bg-danger";
            <tr>
                <td class="text-center">@sl</td>
                <td class="hide">@item.LDisId</td>
                <td class="text-center" data-val="@item.LoanStatus">
                    <span class="@badge" style="color:white">@item.LoanStatus</span>
                </td>
                <td>@item.LDisCode</td>
                <td class="text-right">@item.LoanAmount.ToString("0.00")</td>
                <td class="text-right">@item.DailyPayable.ToString("0.00")</td>
                <td style="width:15%">
                    <input type="number" class="collectionAmount form-control form-control-sm" value="0" />
                </td>
            </tr>
            }
            @if (Model.Count() == 0)
            {
                <tr class="text-center empty-row">
                    <td colspan="7">
                        No Rows Found
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


